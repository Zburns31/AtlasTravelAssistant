# Atlas Travel Assistant â€” environment variables
# Copy this file to .env and fill in your values.
# Never commit .env to version control.

# ------------------------------------------------------------------
# LLM / OpenRouter  (https://openrouter.ai/keys)
# ------------------------------------------------------------------
OPENROUTER_API_KEY=your_openrouter_key_here

# Any model string supported by OpenRouter:
#   openai/gpt-4o | anthropic/claude-3-5-sonnet | google/gemini-2.0-flash
ATLAS_LLM_MODEL=openai/gpt-4o

# Leave as-is unless you are self-hosting a compatible proxy.
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ------------------------------------------------------------------
# External services
# ------------------------------------------------------------------
ATLAS_WEATHER_API_KEY=your_weather_api_key_here

# ------------------------------------------------------------------
# Application
# ------------------------------------------------------------------
ATLAS_DEBUG=false
ATLAS_HOST=127.0.0.1
ATLAS_PORT=8050
